{
  "table_name": "users",
  "description": "User accounts for authentication and profile management",
  "columns": {
    "id": {
      "type": "BIGINT",
      "unsigned": true,
      "nullable": false,
      "auto_increment": true,
      "primary_key": true,
      "description": "Unique user identifier"
    },
    "username": {
      "type": "VARCHAR",
      "length": 50,
      "nullable": false,
      "unique": true,
      "description": "Unique username for login"
    },
    "email": {
      "type": "VARCHAR",
      "length": 100,
      "nullable": false,
      "unique": true,
      "description": "User email address"
    },
    "password_hash": {
      "type": "VARCHAR",
      "length": 255,
      "nullable": false,
      "description": "Hashed password using bcrypt"
    },
    "full_name": {
      "type": "VARCHAR",
      "length": 100,
      "nullable": true,
      "description": "User full name"
    },
    "avatar_url": {
      "type": "VARCHAR",
      "length": 255,
      "nullable": true,
      "description": "Profile avatar URL"
    },
    "status": {
      "type": "ENUM",
      "values": ["active", "inactive", "suspended"],
      "nullable": false,
      "default": "active",
      "description": "User account status"
    },
    "last_login_at": {
      "type": "TIMESTAMP",
      "nullable": true,
      "description": "Last login timestamp"
    },
    "created_at": {
      "type": "TIMESTAMP",
      "nullable": false,
      "default": "CURRENT_TIMESTAMP",
      "description": "Account creation timestamp"
    },
    "updated_at": {
      "type": "TIMESTAMP",
      "nullable": false,
      "default": "CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP",
      "description": "Last update timestamp"
    },
    "created_by": {
      "type": "BIGINT",
      "unsigned": true,
      "nullable": true,
      "description": "Admin user ID who created this user"
    }
  },
  "constraints": {
    "unique_constraints": [
      "UNIQUE KEY idx_username (username)",
      "UNIQUE KEY idx_email (email)"
    ],
    "check_constraints": [
      "CHECK (status IN ('active', 'inactive', 'suspended'))"
    ]
  }
}