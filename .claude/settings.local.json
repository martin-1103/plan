{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "python \".claude/hooks/file-lock-check.py\"",
            "timeout": 120
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python \".claude/hooks/file-lock-manager.py\" --event PreToolUse",
            "timeout": 30
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python \".claude/hooks/file-lock-manager.py\" --event PostToolUse",
            "timeout": 30
          }
        ]
      },
      {
        "matcher": "CompleteEdit",
        "hooks": [
          {
            "type": "command",
            "command": "python \".claude/hooks/file-lock-manager.py\" --event CompleteEdit",
            "timeout": 15
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python \".claude/hooks/session-unlock.py\"",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
